{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/cron/(.*)",
      "dest": "/api/cron/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/cleanup-holds",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/cleanup-tickets",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/cleanup-payments",
      "schedule": "0 4 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

